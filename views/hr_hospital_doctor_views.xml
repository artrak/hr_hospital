<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_doctor_tree" model="ir.ui.view">
        <field name="name">Doctor List</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <header>
                    <button name="%(hr_hospital_action_disease_report_in_doctor_list)d"
                            string="Report on diseases"
                            type="action"/>
                </header>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="specialty_id"/>
                <field name="is_intern"/>
                <field name="mentor_id"/>
            </tree>
        </field>
    </record>

    <record id="view_doctor_form" model="ir.ui.view">
        <field name="name">Doctor Form</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="phone"/>
                            <field name="gender" widget="radio"/>
                        </group>
                        <group>
                            <field name="photo"
                                   widget="image"
                                   class="oe_avatar m-0"
                                   options='{"zoom": true, "preview_image":"avatar_256"}'/>
                            <field name="specialty_id"/>
                            <field name="is_intern" />
                            <field name="mentor_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr_hospital.doctor</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
