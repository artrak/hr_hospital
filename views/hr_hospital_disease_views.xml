<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Деревоподібне представлення для моделі Види захворювань -->
    <record id="view_disease_tree" model="ir.ui.view">
        <field name="name">Disease tree</field>
        <field name="model">hr_hospital.disease</field>
        <field name="arch" type="xml">
            <tree string="hr_hospital.disease" >
                <field name="name"/>
                <field name="description"/>
                <field name="disease_type_id"/>
                <field name="parent_id" invisible="0"/>
            </tree>
        </field>
    </record>

    <!-- Панель пошуку -->
    <record id="hr_hospital_disease_search" model="ir.ui.view">
        <field name="name">hr.hospital.disease.search (hr_hospital_disease)</field>
        <field name="model">hr_hospital.disease</field>
        <field name="arch" type="xml">
            <search string="Filters">
                <searchpanel>
                    <field name="disease_type_id" select="one" hierarchize="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Формове представлення для моделі Види захворювань -->
    <record id="view_disease_form" model="ir.ui.view">
        <field name="name">Disease Form</field>
        <field name="model">hr_hospital.disease</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="disease_type_id"/>
                        <field name="parent_id" string="Parent Disease"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_disease_pivot" model="ir.ui.view">
        <field name="name">Disease pivot</field>
        <field name="model">hr_hospital.disease</field>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <pivot string="Pivot Diseases"
                   disable_linking="1"
                   sample="1"
                   display_quantity="1">
                <field name="create_date" interval="year" type="col"/>
                <field name="create_date" interval="month" type="col"/>
                <field name="disease_type_id" type="row"/>
                <field name="name" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="hr_hospital_disease_graph" model="ir.ui.view">
        <field name="name">Disease Graph</field>
        <field name="model">hr_hospital.disease</field>
        <field name="arch" type="xml">
            <graph string="Disease Analysis"
                   type="bar">  <!-- чи line -->
                <field name="create_date" type="col" interval="month"/>
                <field name="disease_type_id" type="row"/>
                <field name="id" type="measure" string="Number of Diseases"/>
            </graph>
        </field>
    </record>

    <!-- Дія, що відкриває список Видів захворювань -->
    <record id="action_hr_hospital_disease" model="ir.actions.act_window">
        <field name="name">Diseases</field>
        <field name="res_model">hr_hospital.disease</field>
        <field name="view_mode">tree,form,pivot,graph</field>
    </record>

</odoo>
