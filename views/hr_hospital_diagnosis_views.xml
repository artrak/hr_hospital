<odoo>
    <!-- Деревоподібне представлення для моделі Diagnosis -->
    <record id="view_diagnosis_tree" model="ir.ui.view">
        <field name="name">Diagnosis List</field>
        <field name="model">hr_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <tree>
                <field name="description"/>
                <field name="is_approved"/>
            </tree>
        </field>
    </record>

    <!-- Form Create Diagnoses -->
    <record id="view_diagnosis_form" model="ir.ui.view">
        <field name="name">Diagnosis Form</field>
        <field name="model">hr_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="description"/>
                        <field name="disease_id" required="1"/>
                        <field name="visit_id" invisible="1"/>
                        <field name="is_approved"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Дія для відкриття списку діагнозів -->
    <record id="action_hr_hospital_diagnosis" model="ir.actions.act_window">
        <field name="name">Diagnoses</field>
        <field name="res_model">hr_hospital.diagnosis</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
